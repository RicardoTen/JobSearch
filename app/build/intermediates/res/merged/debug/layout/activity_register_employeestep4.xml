<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar" />

    <LinearLayout
        style="@style/Normal_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_normal_height"
        android:background="@color/background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的优势" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_companystep4_introduce"
            style="@style/Normal_EditText_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittxt_normal"
            android:gravity="top"
            android:hint="两年UI设计经验，熟悉iOS和Android的界面设计规范，对产品本色有独特见解，有一定的手绘基础。不少于20字。"
            android:maxLines="5"
            android:minLines="5"
            android:textSize="12sp" />

        <include layout="@layout/fengexian" />

        <LinearLayout
            style="@style/Normal_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看看别人怎么写"
                android:textColor="@color/app_main"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/register_employeestep2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/140"
                android:textColor="@color/app_main"
                android:textSize="@dimen/txt_normal_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/register_companystep4_goMainEmployee"
        style="@style/Normal_Button_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/btn_marginLeft"
        android:text="下一步" >
    </Button>

</LinearLayout>