<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 常规的一行一行 -->
    <style name="Normal_LinearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/list_normal</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 常规的一行一行中的左边文字 -->
    <style name="Normal_Linearlayout_leftTxt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_black</item>
    </style>
    <!-- 常规的一行一行中的右边文字 -->
    <style name="Normal_Linearlayout_rightTxt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_black</item>
    </style>
    <!-- 常规的一行一行中的右边图片 -->
    <style name="Normal_LinearLayout_Icon">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_main</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/youjiantou</item>
    </style>
    <style name="Normal_LinearLayout_Icon2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/youjiantou</item>
    </style>
    <!-- 常规的一行一行中的分割线 -->
    <style name="Normal_LinearLayout_fenxian_1">
        <item name="android:background">@color/app_white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- 常规的一行一行中的分割线 -->
    <style name="Normal_Linearlayout_fenxian_2">
        <item name="android:background">@color/background</item>
    </style>

  
    <!-- 按钮 -->
    <style name="Normal_Button_blue">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_white</item>
    </style>
    <!-- 编辑框 -->
    <style name="Normal_EditText_white">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">14sp</item>
        
    </style>
     <style name="Dialog_bocop">  
       <item name="android:windowBackground">@color/app_red</item>  
       <item name="android:windowNoTitle">true</item>  	
       <item name="android:windowIsTranslucent">true</item>  <!-- 半透明 -->
       <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
   </style>


  <!--  IM用到的资源-->
    <!-- Base application theme. -->
 <!--   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
