<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/login_login_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/app_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/login_login_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11" />

        <Button
            android:id="@+id/login_login_clearPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清理手机号"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/login_login_Code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="验证码"
            android:inputType="number" />

        <Button
            android:id="@+id/login_login_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/login_login_goLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_login_goUserAggrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议" />

        <Button
            android:id="@+id/login_login_goPasswordLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录" />
    </LinearLayout>

     

</LinearLayout>